{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
			"ES2021"
		],
		"moduleResolution": "node",
		"allowJs": true,
    "declaration": true,
		"declarationMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
		"esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,

    /* alias importing */
    "baseUrl": "./" /* Specify the base directory to resolve non-relative module names. */,
    "paths": {
        "@*": ["src/*"]
    }
  }
}
